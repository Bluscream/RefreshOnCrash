{
    "manifest_version": 2,
    "name": "AutoReload On Crash",
    "version": "1.0",
    "description": "Automatically reloads pages when they crash.",
    "permissions": [
      "tabs"
    ],
    "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Reload Crashed Page"
    }
  }
  